<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lin_item_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/lin_item_height"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_heading"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/party_symbol" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/image_heading"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/party_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="top"
                    android:singleLine="true"
                    android:text="@string/member_discussion"
                    android:textColor="@color/member_transform_black"
                    android:textSize="@dimen/member_transform_size" />

                <TextView
                    android:id="@+id/party_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/member_discussion"
                    android:textColor="@color/member_transform_grey"
                    android:textSize="@dimen/member_text_size" />

                <TextView
                    android:id="@+id/party_phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="@string/member_discussion"
                    android:textColor="@color/member_transform_grey"
                    android:textSize="@dimen/member_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_item_selected"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/party_branch_selected" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/member_transform_party_symbol" />
    </LinearLayout>

</LinearLayout>